@model AromaMocha.Models.Feedback
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aroma Mocha</title>
    <link rel="stylesheet" type="text/css" href="~/Static/css/Contact.css">
    <head profile="http://127.0.0.1:5500/home.html">
        <link rel="icon" type="image/png" href="~/Static/images/logo5.png">
        <script src="https://kit.fontawesome.com/10f6dbc809.js" crossorigin="anonymous"></script>
        <script>
            var alertGenerate = function () {
                alert("Thanks for your feedback!");
            }
        </script>
    </head>
    <body>

        <!-- Section 1 for header and display front page -->

        <section class="header">
            <nav>
                <!-- nav bar -->
                <h3>Aroma Mocha</h3>
                <div class="links">
                    <ul>
                        <!-- buttons in nav bar-->
                        <li><a href="/Home/Index">Home</a></li>
                        @if (Convert.ToBoolean(Session["isAdmin"]) == false)
                        {
                            <li><a href="/Home/About">About Us</a></li>
                        }
                        @if (Convert.ToBoolean(Session["isAdmin"]) == true)
                        {
                            <li><a href="/Reservation/Reservation">Reservations</a></li>
                        }
                        else
                        {
                            <li><a href="/Reservation/Reservation">Reservation</a></li>
                        }
                        <li><a href="/Shop/Shop">Shop</a></li>
                        @if (Convert.ToBoolean(Session["isAdmin"]) == true)
                        {
                            <li><a href="/Admin/ShowFeedbacks">Feedbacks</a></li>
                        }
                        else
                        {
                            <li><a href="/Contact/Contact">Contact us</a></li>
                        }
                        @if (Session["username"] == null)
                        {
                            <li><a href="/Register/Register">Register</a></li>
                        }
                        @if (Session["username"] != null)
                        {
                            <li><a href="/Home/Index">@Session["username"]</a></li>
                            <li><a href="/Register/Logout">logout</a></li>
                        }
                    </ul>
                </div>
            </nav>

            <!-- div for title at the center of the page -->

            <div class="title">
                <h3> CONTACT US</h3><br>
                <p><i>Let's talk about everything</i></p>
            </div>
        </section>

        <!-- Section 2 to display contact details -->

        <section class="contact">

            <div class="row">

                <div class="menu">

                    <p><b>Get in touch with us</b></p>
                    <p><i>We are open for any suggestion or just to have a chat</i></p><br><br>

                    <p class="handles">Address: </p>
                    <p>Mall road Lahore Pakistan</p><br>

                    <p class="handles">Phone: </p>
                    <p>0123 456 78910</p><br>

                    <p class="handles">Email</p>
                    <p>aroma.mocha@gmail.com</p><br>

                    <p class="handles">Facebook: </p>
                    <p>         Aroma Mocha</p><br>
                </div>

                <div class="form">

                    <h1>Contact us</h1>
                    <form action="/Contact/AddFeedback" method="post">
                        <p>Full Name</p>
                        <input type="text" placeholder="Your Name" name="name" required>
                        <p>Email address</p>
                        <input type="email" placeholder="Your Email" name="email" required>
                        <p>Subject</p>
                        <input type="text" placeholder="Your Subject" name="subject" required>
                        <p>Message</p>
                        <textarea placeholder="Write your message" name="message" required></textarea>

                        <div class="send">
                            <input type="submit" value="Send Message" onclick="alertGenerate()">
                        </div>
                    </form>

                </div>

            </div>
        </section>

        <!-- section 3 for footer -->
        <section class="footer">

            <div class="foot">
                <div class="foot1">

                    <h3>Aroma Mocha</h3>
                    <i class="fas fa-map-marker-alt"></i>Mall Road, Lahore Pakistan.<br>

                    <p>Call.  0123 456 78910</p>
                    <p>Opening hours</p>
                    <p>Monday to Sunday</p>
                    <p>10:00 AM - 11:00 PM</p>
                </div>

                <div class="foot1">
                    <br>
                    <p class="media">Social Media Handles</p><br>
                    <i class="fab fa-facebook-f"></i>Aroma Mocha<br>
                    <i class="fab fa-instagram"></i>aroma.mocha<br>
                    <i class="fa fa-envelope"></i>aroma.mocha@gmail.com

                </div>
            </div>
            <hr>

        </section>
    </body>
</html>