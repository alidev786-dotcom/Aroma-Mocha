<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aroma Mocha</title>
    <link rel="stylesheet" type="text/css" href="~/Static/css/Index.css">
    <head profile="http://127.0.0.1:5500/home.html">
        <link rel="icon" type="image/png" href="~/Static/images/logo5.png" />

        <script src="https://kit.fontawesome.com/10f6dbc809.js" crossorigin="anonymous"></script>

    </head>
    <body>

        <!-- Section 1 for header and display front page -->

        <section class="header">
            <nav>
                <!-- nav bar -->
                <h3>Aroma Mocha</h3>
                <div class="links">
                    <ul>
                        <!-- buttons in nav bar-->
                        <li><a href="/Home/Index" class="active">Home</a></li>
                        @if (Convert.ToBoolean(Session["isAdmin"]) == false)
                        {
                            <li><a href="/Home/About">About Us</a></li>
                        }
                        @if (Convert.ToBoolean(Session["isAdmin"]) == true)
                        {
                            <li><a href="/Reservation/Reservation">Reservations</a></li>
                        }
                        else
                        {
                            <li><a href="/Reservation/Reservation">Reservation</a></li>
                        }
                        <li><a href="/Shop/Shop">Shop</a></li>
                        @if (Convert.ToBoolean(Session["isAdmin"]) == true)
                        {
                            <li><a href="/Admin/ShowFeedbacks">Feedbacks</a></li>
                        }
                        else
                        {
                            <li><a href="/Contact/Contact">Contact us</a></li>
                        }
                        @if (Session["username"] == null)
                        {
                            <li><a href="/Register/Register">Register</a></li>
                        }
                        @if (Session["username"] != null)
                        {
                            <li><a href="/Home/Index">@Session["username"]</a></li>
                            <li><a href="/Register/Logout">logout</a></li>
                        }
                    </ul>
                </div>
            </nav>

            <!-- div for title at the center of the page -->

            <div class="title">
                <h3> RESTAURANT AND CAFE</h3><br>
                <p><i>Food for the body is not enough. There must be food for the soul. </i></p>
            </div>

            <!-- button for menu at the center of the page -->
            <div class="butten">
                <h1><a href="/Menu/Menu">View Menu</a></h1>
            </div>
        </section>

        <!-- Section 2 to display food choices -->

        <section class="offers">
            <div>
                <h2>Our Restaurant offers</h2>
                <p><i>The best quality food which includes</i></p>
            </div>

            <div class="row">

                <div class="menu">
                    <p><b>Desi Pakistani Foods</b></p><br><hr><br>
                    <p>Rice</p>
                    <p>Chapati</p>
                    <p>Karahi</p>
                    <p> Deserts</p>
                    <p>Drinks</p>
                </div>

                <div class="menu">
                    <p><b>Chinese</b></p><br><hr><br>
                    <p>Fried Rice</p>
                    <p>Spaghetti</p>
                    <p>Chow mein</p>
                    <p>Soup</p>
                </div>

                <div class="menu">
                    <p><b>Fast Food</b></p><br><hr><br>
                    <p>Burgers</p>
                    <p>Shawarma</p>
                    <p>Pizza</p>
                    <p>Sandwich</p>
                    <p>Fried Chicken</p>
                </div>

            </div>
        </section>

        <!-- section 3 for footer -->
        <section class="footer">

            <div class="foot">
                <div class="foot1">

                    <h3>Aroma Mocha</h3>
                    <i class="fas fa-map-marker-alt"></i>Mall Road, Lahore Pakistan.<br>

                    <p>Call.  0123 456 78910</p>
                    <p>Opening hours</p>
                    <p>Monday to Sunday</p>
                    <p>10:00 AM - 11:00 PM</p>
                </div>

                <div class="foot1">
                    <br>
                    <p class="media">Social Media Handles</p><br>
                    <i class="fab fa-facebook-f"></i>Aroma Mocha<br>
                    <i class="fab fa-instagram"></i>aroma.mocha<br>
                    <i class="fa fa-envelope"></i>aroma.mocha@gmail.com

                </div>
            </div>
            <hr>

        </section>
    </body>
</html>